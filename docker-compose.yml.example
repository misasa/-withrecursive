version: '2'
services:
  postgres:
    image: postgres:9
    volumes:
      - postgres_data:/var/lib/postgresql/data
  app:
    image: ruby:2.3
    working_dir: /usr/src/app
    command: bundle exec rspec
    volumes:
      - .:/usr/src/app/
    depends_on:
      - postgres
volumes:
  postgres_data:
    external: true
        